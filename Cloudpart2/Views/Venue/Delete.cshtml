@{
}
@model CloudPart1.Models.Venue

@{
    ViewData["Title"] = "Delete Venue";
}

<h1>Delete Venue</h1>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        <h4>Cannot Delete Venue</h4>
        <p>@ViewBag.ErrorMessage</p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
}
else
{
    <h3>Are you sure you want to delete this venue?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VenueName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VenueName)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Location)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Location)
            </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Capacity)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Capacity)
            </dd>

            <dt class="col-sm-2">
                Venue Image
            </dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="Venue Image" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                }
                else
                {
                    <span class="text-muted">No image</span>
                }
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="VenueId" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
}
